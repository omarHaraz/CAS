@model IEnumerable<CAS.Models.Users.Doctor>

@{
    Layout = "_AdminLayout"; // Use the specific Admin Navbar
    ViewData["Title"] = "Manage Doctors";
}

<div class="container" style="margin-top: 50px;">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2> Doctor Account Management</h2>
        <a href="/DoctorManagement/Create" class="btn btn-primary shadow-sm">
            Register New Doctor
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center mt-5 p-4 rounded-3 border-0 shadow-sm">
            <h5 class="alert-heading">No Doctor Accounts Found</h5>
            <p class="mb-0">Please register a new doctor account to begin management.</p>
        </div>
    }
    else
    {
        <table class="table table-striped table-hover shadow-sm align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Specialty</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Username</td>
                        <td>@item.Email</td>
                        <td>
                            @if (item.Specialty != null)
                            {
                                <span>@item.Specialty.Name</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Not Assigned</span>
                            }
                        </td>
                        <td class="text-center">
                            <a href="/DoctorManagement/Edit/@item.Id" class="btn btn-sm btn-outline-info">Edit</a>

                            <form asp-action="Delete" method="post" asp-route-id="@item.Id" class="d-inline" onsubmit="return confirm('WARNING: Delete doctor @item.Username and associated data?');">
                                @Html.AntiForgeryToken()
                                <button type="submit">
                                     Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-4">
        <a href="/Home/AdminDashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>