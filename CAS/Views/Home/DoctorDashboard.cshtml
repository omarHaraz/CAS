@model CAS.Models.Users.Doctor

@{
    Layout = "_DoctorLayout";
    ViewData["Title"] = "Doctor Dashboard";
}

<div class="container" style="margin-top: 50px;">

    <div class="p-5 text-center bg-light rounded-3 shadow-sm mb-5">
        <h1 class="display-5 fw-bold text-primary">Welcome, Dr. @Model.Username!</h1>
        <p class="fs-4 text-muted">Your clinic management portal is ready.</p>
    </div>

    <div class="row g-4">

        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100 p-4">
                <div class="card-body">
                    <h5 class="card-title text-success">
                        <i class="fas fa-calendar-check"></i> Today's Appointments
                    </h5>
                    <p class="card-text fs-1 mt-3 text-success">0</p>
                    <p class="text-muted">No appointments scheduled for today.</p>
                    <a href="#" class="btn btn-outline-success mt-3 disabled">
                        View Calendar
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>