@model CAS.Models.Users.Doctor

@{
    Layout = "_DoctorLayout";
    ViewData["Title"] = "Doctor Dashboard";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard Overview</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <button type="button" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-calendar"></i> @DateTime.Now.ToString("dd MMM yyyy")
        </button>
    </div>
</div>

<div class="alert alert-primary shadow-sm border-0" role="alert">
    <h4 class="alert-heading"><i class="fas fa-user-md"></i> Welcome back, Dr. @Model.Username!</h4>
    <p class="mb-0">
        You have
        <strong class="text-danger">@ViewBag.PendingCount pending requests</strong>
        that need your attention today.
    </p>
</div>

<div class="row g-4 mb-4">

    <div class="col-md-4">
        <div class="card shadow-sm border-0 border-start border-4 border-primary h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase text-muted mb-1">My Schedule</h6>
                        <h2 class="mb-0 fw-bold text-primary">View</h2>
                    </div>
                    <div class="bg-primary text-white rounded-circle p-3">
                        <i class="fas fa-calendar-check fa-lg"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="Doctor" asp-action="Schedule" class="btn btn-sm btn-outline-primary w-100">
                        Open Calendar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-0 border-start border-4 border-warning h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase text-muted mb-1">Pending Approval</h6>
                        <h2 class="mb-0 fw-bold text-warning">@ViewBag.PendingCount Requests</h2>
                    </div>
                    <div class="bg-warning text-white rounded-circle p-3">
                        <i class="fas fa-clock fa-lg"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="Doctor" asp-action="Appointments" class="btn btn-sm btn-outline-warning w-100">
                        Review Now
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-0 border-start border-4 border-danger h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase text-muted mb-1">Quick Actions</h6>
                        <span class="text-muted small">Need time off?</span>
                    </div>
                    <div class="bg-danger text-white rounded-circle p-3">
                        <i class="fas fa-ban fa-lg"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="Doctor" asp-action="Leave" class="btn btn-sm btn-outline-danger w-100">
                        Block Slot
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>