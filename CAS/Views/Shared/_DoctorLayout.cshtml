<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Doctor Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        /* Custom Sidebar Styles */
        .sidebar {
            min-height: 100vh;
            background-color: #2c3e50; /* Dark Blue-Grey */
            color: white;
        }

            .sidebar a {
                color: #bdc3c7;
                text-decoration: none;
                padding: 15px 20px;
                display: block;
                border-bottom: 1px solid #34495e;
                transition: all 0.3s;
            }

                .sidebar a:hover, .sidebar a.active {
                    background-color: #34495e;
                    color: white;
                    border-left: 4px solid #3498db; /* Active Blue Stripe */
                }

            .sidebar .brand {
                padding: 20px;
                font-size: 1.5rem;
                font-weight: bold;
                background-color: #1a252f;
                color: white;
                text-align: center;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">

            <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse show">
                <div class="brand">
                    <i class="fas fa-user-md"></i> CAS Doctor
                </div>
                <div class="pt-3">

                    <a asp-controller="Doctor" asp-action="Dashboard"
                       class="@(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "active" : "")">
                        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                    </a>

                    <a asp-controller="Doctor" asp-action="Schedule"
                       class="@(ViewContext.RouteData.Values["Action"].ToString() == "Schedule" ? "active" : "")">
                        <i class="fas fa-calendar-alt me-2"></i> My Schedule
                    </a>

                    <a asp-controller="Doctor" asp-action="Appointments"
                       class="@(ViewContext.RouteData.Values["Action"].ToString() == "Appointments" ? "active" : "")">
                        <i class="fas fa-clipboard-check me-2"></i> Requests

                        @if (ViewBag.PendingCount != null && ViewBag.PendingCount > 0)
                        {
                            <span class="badge bg-danger float-end">@ViewBag.PendingCount</span>
                        }
                    </a>

                    <a href="#" class="text-muted">
                        <i class="fas fa-ban me-2"></i> Block Slots (Coming Soon)
                    </a>

                    <a href ="/Account/Login" class="text-danger mt-5">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </a>

                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4 bg-light min-vh-100">
                @RenderBody()
            </main>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>