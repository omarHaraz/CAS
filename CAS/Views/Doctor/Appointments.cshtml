@model IEnumerable<CAS.Models.Appointment>

@{
    Layout = "_DoctorLayout";
    ViewData["Title"] = "Pending Requests";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="fas fa-clipboard-check me-2"></i>Appointment Requests</h2>
        <span class="badge bg-warning text-dark fs-6">
            @Model.Count() Pending
        </span>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="p-5 text-center text-muted">
                    <div class="display-4 text-secondary mb-3">
                        <i class="fas fa-inbox"></i>
                    </div>
                    <h4>No pending requests.</h4>
                    <p>All paid appointments have been processed.</p>
                </div>
            }
            else
            {
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="p-3">Patient</th>
                            <th class="p-3">Date & Time</th>
                            <th class="p-3">Reason</th>
                            <th class="p-3">Payment Status</th>
                            <th class="p-3">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="p-3 fw-bold">
                                    <i class="fas fa-user-circle text-secondary me-2"></i>@item.Patient.Username
                                </td>
                                <td class="p-3">
                                    <div class="fw-bold">@item.StartTime.ToString("MMM dd, yyyy")</div>
                                    <small class="text-muted">@item.StartTime.ToString("hh:mm tt")</small>
                                </td>
                                <td class="p-3 text-muted">@item.Reason</td>
                                <td class="p-3">
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle me-1"></i> PAID
                                    </span>
                                </td>
                                <td class="p-3">
                                    <div class="d-flex gap-2">
                                        <form asp-action="ApproveAppointment" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-success btn-sm px-3 shadow-sm">
                                                <i class="fas fa-check me-1"></i> Accept
                                            </button>
                                        </form>

                                        <form asp-action="RejectAppointment" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm px-3 shadow-sm"
                                                    onclick="return confirm('Are you sure you want to REJECT this appointment?');">
                                                <i class="fas fa-times me-1"></i> Reject
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>