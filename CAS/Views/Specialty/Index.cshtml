@model IEnumerable<CAS.Models.Specialty>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Manage Specialties";
}

<div class="container" style="margin-top: 50px;">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2> Specialty Management</h2>
        <a href="/Specialty/Create" class="btn btn-primary shadow-sm">
           Define New Specialty
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center mt-5 p-4 rounded-3 border-0 shadow-sm">
            <h5 class="alert-heading">No Specialties Defined Yet</h5>
            <p class="mb-0">Use the "Define New Specialty" button above to populate the clinic's services.</p>
        </div>
    }
    else
    {
        <table class="table table-striped table-hover shadow-sm align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Specialty Name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.Name</strong></td>
                        <td class="text-center">
                            <form asp-action="DeleteConfirmed" method="post"  onsubmit="return confirm('Are you sure you want to delete the specialty: @item.Name?');">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" >
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-4">
        <a href="/Home/AdminDashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>